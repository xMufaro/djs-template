{
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "ESNEXT",
        "outDir": "release",
        "sourceMap": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true,
        "importHelpers": true
    },
    "include": ["src", "src/events/discordjs/ready.ts", "src/events/discordjs/interactionCreate.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}